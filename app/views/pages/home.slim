section.section.pbottom-70
  .container
    .row
      .col-lg-12
        .center-heading
          h2.section-title Latest Blog Posts
      .offset-lg-3.col-lg-6
        .center-text
          p Check out App Dev Academy blog with interesting application development tips and company news.
    .row
      - @articles.each do |article|
        .col-lg-4.col-md-6.col-sm-12
          .blog-post-thumb
            .img
